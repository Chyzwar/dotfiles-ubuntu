    email = schizek.marcin@gmail.com

[github]
    user = Chyzwar

[credential]
    helper = store --file ~/.git-credentials
    helper = cache --timeout 300000

[core]
    excludesfile = ~/.gitignore_global
    editor = subl
    filemode = false
    trustctime = false

[alias]
    st = status
    sts = status -sb
    stl = ls-files -m -o --exclude-standard
    ci = commit
    br = branch
    co = checkout
    cr = clone --recursive
    df = diff --word-diff
    unstage = reset --hard HEAD
    ag = !sh -c 'git ls-files -m -o --exclude-standard | grep $1 | xargs git add --verbose' -
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --pretty=oneline --graph --abbrev-commit
    lm = log --pretty=format:'* %s (%h)'
    lg = log -p
    g = grep --break --heading --line-number
    amend = commit --amend --reuse-message=HEAD
    contrib = shortlog --summary --numbered
	# List files ignored by .gitignore and friends
	show-ignored = "! git clean -ndX | perl -pe 's/Would remove/Ignored:/'"

[grep]
    lineNumber = true

[help]
    autocorrect = 1

[difftool]
    prompt = true

[mergetool]
    prompt = true

[push]
    default = simple

[fetch]
  prune = true


[merge]
tool = sublimerge

[mergetool "sublimerge"]
cmd = sublim -n --wait \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\" --command \"sublimerge_diff_views\"
trustExitCode = false



[diff]
tool = sublimerge

[difftool "sublimerge"]
cmd = subl -n --wait \"$REMOTE\" \"$LOCAL\" --command \"sublimerge_diff_views {\\\"left_read_only\\\": true, \\\"right_read_only\\\": true}\"
